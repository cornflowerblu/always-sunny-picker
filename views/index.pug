extends layout

block content
    div(class="mx-auto text-center")
        h1(class="display-6 pb-2") #{title}
    div(class="d-flex align-items-center justify-content-center pb-2")
        img(src=(`${image}`), alt="Your favorite sunny character")
    div(class="recommendation")
        p(class="fs-5 text-primary shadow p-3 mt-3 bg-body rounded") #{message}